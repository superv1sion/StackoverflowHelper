{
  "manifest_version": 3,
  "name": "StackoverflowHelper",
  "version": "1.0.0",
  "description": "Asks chatGPT to choose the best answer from presented",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action":{
    "default_title": "Popup and Content Script",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  }
}
